@{
    Layout = "~/Views/Shared/_Layout_PC.cshtml";
}
<style type="text/css">
    .detail-imglist {
        padding: 10px;
        border: 1px solid #ddd;
        min-height: 200px;
    }

        .detail-imglist li {
            position: relative;
            width: 200px;
            height: 150px;
            margin-right: 15px;
            padding: 5px !important;
            border: 1px solid #ddd;
            background-color: #f5f5f5;
            vertical-align: middle;
        }

            .detail-imglist li:last-child:hover input {
                cursor: pointer;
            }

            .detail-imglist li img {
                width: 100%;
                height: 100%;
            }

            .detail-imglist li .remove {
                position: absolute;
                right: -10px;
                top: -10px;
                font-size: 22px;
                z-index: 10;
                color: #fc5a59;
            }

            .detail-imglist li input[type='file'] {
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
                height: 100%;
                opacity: 0;
                line-height: 0;
                z-index: 10;
            }

            .detail-imglist li .add {
                position: absolute;
                top: 50%;
                left: 50%;
                display: inline-block;
                margin: -17px -48px;
            }
</style>

<!-- 页面头部  -->
<div class="header">
    @{Html.RenderAction("Top", "AdminManage", new { section = "1" });}
</div>

<!-- 页面主题内容  -->
<div class="wrap-content">
    <div class="side-left">
        @{Html.RenderAction("Aside", "AdminManage", new { menu_id = "5_1" });}
    </div>
    <div class="container side-content">
        <div class="row-fluid">
            <div id="content" class="animated fadeInRight">
                <div class="row-fluid">
                    <ul class="breadcrumb">
                        <li><a href="/Order/OrderList">产品列表</a> <span class="divider">/</span></li>
                        <li class="active">订单详情</li>
                    </ul>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <div class="ibox">
                            <div class="ibox-title">
                                <h5>订单详情</h5>
                            </div>
                            <div class="ibox-content">
                                <div class="row-fluid">
                                    <div class="span6">
                                        <div class="control-group">
                                            <label class="control-label">订单状态：</label>
                                            <div class="controls">
                                                <input type="text" data-bind="value: data().stateText" disabled />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span6">
                                        <div class="control-group">
                                            <label class="control-label">订单号：</label>
                                            <div class="controls">
                                                <input type="text" data-bind="value: data().orderNo" disabled />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span6">
                                        <div class="control-group">
                                            <label class="control-label">订单日期：</label>
                                            <div class="controls">
                                                <input type="text" data-bind="value: data().create_time" disabled />
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span12">
                                        <div class="control-group">
                                            <label class="control-label">产品封面图：</label>
                                            <div class="controls">
                                                <ul class="unstyled inline detail-imglist">
                                                    <!-- ko foreach: coverImgList -->
                                                    <li>
                                                        <img data-bind="attr: {src: $data.filePath}" />
                                                    </li>
                                                    <!-- /ko -->
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="row-fluid">
                                    <div class="span6">
                                        <div class="control-group">
                                            <label class="control-label">产品名称：</label>
                                            <div class="controls">
                                                <input type="text" data-bind="value: data().productName" disabled />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="span6">
                                        <div class="control-group">
                                            <label class="control-label">订单金额：</label>
                                            <div class="controls">
                                                <div class="input-append">
                                                    <input type="text" data-bind="value: data().payMoney" disabled />
                                                    <span class="add-on">元</span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label">产品单价：</label>
                                                <div class="controls">
                                                    <div class="input-append">
                                                        <input type="text" data-bind="value: data().price" disabled />
                                                        <span class="add-on">元</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label">预订人：</label>
                                                <div class="controls">
                                                    <input type="text" data-bind="value: data().userName" disabled />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label">预订人电话：</label>
                                                <div class="controls">
                                                    <div class="input-prepend">
                                                        <span class="add-on">+86</span>
                                                        <input type="text" data-bind="value: data().telephone" disabled />
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label">安装大小：</label>
                                                <div class="controls">
                                                    <input type="text" data-bind="value: data().installSize" disabled />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row-fluid">
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label">安装日期：</label>
                                                <div class="controls">
                                                    <input type="text" data-bind="value: data().installDate" disabled />
                                                </div>
                                            </div>
                                        </div>
                                        <div class="span6">
                                            <div class="control-group">
                                                <label class="control-label">收货人地址：</label>
                                                <div class="controls">
                                                    <textarea data-bind="value: data().province + data().city + data().county + data().area" disabled></textarea>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var viewModel = {
        data: ko.observable({}),
        coverImgList: ko.observableArray([])
    };

    viewModel.edit = function (id) {
        window.location.href = '/Product/EditProduct/' + '@ViewData["id"]';
    }

    viewModel.getFile = function (idList, callback) {
        var list = [];
        idList.map(function (item, index) {
            var file = {
                index: index,
                filePath: '/UpLoadFile/' + item + '.png'
            };
            list.push(file);
        });
        if (typeof callback == 'function') {
            callback(list);
        }
    }

    viewModel.load = function () {
        loadingIn();
        var params = {};
        params.orderId = '@ViewData["orderId"]';
        Comget('/Order/getOrderInfo', params, function (data) {
            var data = data.backData;
            console.log('data == ', data);
            if (data.state == 0) {
                data.stateText = '待支付';
            } else if (data.state == 1) {
                data.stateText = '已支付';
            } else if (data.state == 2) {
                data.stateText = '交易完成';
            } else if (data.state == -1) {
                data.stateText = '已取消';
            } else {
                data.stateText = '状态异常';
            }
            viewModel.data(data);
            if (data.coverAttaches != '') {
                viewModel.getFile(data.coverAttaches.split(','), function (data) {
                    viewModel.coverImgList(data);
                });
            }
            loadingOut();
        });
    };

    ko.applyBindings(viewModel, $('#content')[0]);

    viewModel.load();
</script>
