@{
    ViewBag.Title = "球场管理";
    Layout = "~/Views/Shared/_Layout_PC.cshtml";
}

<style type="text/css">
    .wrap-upload {
        position: relative;
        width: 200px;
        height: 150px;
        border: 1px solid #ddd;
        text-align: center;
        background-color: #f5f5f5;
    }

        .wrap-upload i {
            position: absolute;
            top: 50%;
            left: 50%;
            width: 86px;
            height: 86px;
            margin-left: -43px;
            margin-top: -43px;
            font-size: 80px;
            color: #cdcdcd;
            z-index: 10;
        }

        .wrap-upload .upload {
            position: absolute;
            left: 0;
            top: 0;
            width: 200px;
            height: 150px;
            opacity: 0;
            z-index: 100;
        }

        .wrap-upload img {
            width: 100%;
            height: 100%;
        }

    .control-label {
        width: 60px;
    }

    .controls {
        position: relative;
        margin-left: 80px;
    }

        .controls img {
            width: 200px;
            height: 150px;
        }

        .controls .del {
            position: absolute;
            top: 50%;
            right: 20px;
            font-size: 24px;
            color: #ab2626;
            -webkit-transform: translateY(-50%);
            transform: translateY(-50%);
        }
</style>

<!-- 页面头部  -->
<div class="header">
    @{Html.RenderAction("Top", "AdminManage", new { section = "6" });}
</div>

<!-- 页面主题内容  -->
<div class="wrap-content">
    <div class="side-left">
        @{Html.RenderAction("Aside", "RollFile", new { menu_id = "1_1" });}
    </div>
    <div class="container side-content">
        <div class="row-fluid">
            <div id="content" class="animated fadeInRight">
                <div class="row-fluid">
                    <div class="span4">
                        <div class="ibox">
                            <div class="ibox-title">
                                <h5>球队服务</h5>
                            </div>
                            <div class="ibox-content">
                                <!-- ko foreach: teamImgList -->
                                <div class="control-group">
                                    <label class="control-label" data-bind="text:  '第' + ($index() + 1) + '张:'"></label>
                                    <div class="controls">
                                        <img data-bind="attr: {src: url}" />
                                        <span class="del icon-remove-sign" data-bind="click: $parent.del"></span>
                                    </div>
                                </div>
                                <!-- /ko -->
                                <div class="control-group">
                                    <label class="control-label">添加图片:</label>
                                    <div class="controls">
                                        <div class="wrap-upload">
                                            <i class="icon-picture"></i>
                                            <input type="file" class="upload" data-bind="event: {change: fileChange}" accept="image/jpg,image/jpeg,image/png" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="span4">
                        <div class="ibox">
                            <div class="ibox-title">
                                <h5>赛事服务</h5>
                            </div>
                            <div class="ibox-content">
                                <!-- ko foreach: matchImgList -->
                                <div class="control-group">
                                    <label class="control-label" data-bind="text:  '第' + ($index() + 1) + '张:'"></label>
                                    <div class="controls">
                                        <img data-bind="attr: {src: url}" />
                                        <span class="del icon-remove-sign" data-bind="click: $parent.del"></span>
                                    </div>
                                </div>
                                <!-- /ko -->
                                <div class="control-group">
                                    <label class="control-label">添加图片:</label>
                                    <div class="controls">
                                        <div class="wrap-upload">
                                            <i class="icon-picture"></i>
                                            <input type="file" class="upload" data-bind="event: {change: fileChange2}" accept="image/jpg,image/jpeg,image/png" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="span4">
                        <div class="ibox">
                            <div class="ibox-title">
                                <h5>会员平台</h5>
                            </div>
                            <div class="ibox-content">
                                <!-- ko foreach: memberImgList -->
                                <div class="control-group">
                                    <label class="control-label" data-bind="text:  '第' + ($index() + 1) + '张:'"></label>
                                    <div class="controls">
                                        <img data-bind="attr: {src: url}" />
                                        <span class="del icon-remove-sign" data-bind="click: $parent.del"></span>
                                    </div>
                                </div>
                                <!-- /ko -->
                                <div class="control-group">
                                    <label class="control-label">添加图片:</label>
                                    <div class="controls">
                                        <div class="wrap-upload">
                                            <i class="icon-picture"></i>
                                            <input type="file" class="upload" data-bind="event: {change: fileChange3}" accept="image/jpg,image/jpeg,image/png" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var viewModel = {
        teamImgList: ko.observableArray([]),
        matchImgList: ko.observableArray([]),
        memberImgList: ko.observableArray([])
    };

    viewModel.fileChange = function (data, obj) {
        fileUpLoad(data, obj, function (src, url) {
            var param = {};
            param.type = '球队服务';
            param.url = url;
            $.post('/RollFile/saveImg', param, function (data) {
                if (data.success) {
                    viewModel.load();
                } else {
                    alert(data.backMsg);
                }
            });      
        });
    }

    viewModel.fileChange2 = function (data, obj) {
        fileUpLoad(data, obj, function (src, url) {
            var param = {};
            param.type = '赛事服务';
            param.url = url;
            $.post('/RollFile/saveImg', param, function (data) {
                if (data.success) {
                    viewModel.load();
                } else {
                    alert(data.backMsg);
                }
            });
        });
    }

    viewModel.fileChange3 = function (data, obj) {
        fileUpLoad(data, obj, function (src, url) {
            var param = {};
            param.type = '会员平台';
            param.url = url;
            $.post('/RollFile/saveImg', param, function (data) {
                if (data.success) {
                    viewModel.load();
                } else {
                    alert(data.backMsg);
                }
            });
        });
    }

    viewModel.del = function () {
        var param = {};
        param.id = this.id;
        $.post('/RollFile/delImg', param, function (data) {
            if (data.success) {
                alert('删除成功');
                viewModel.load();
            } else {
                alert(data.backMsg);
            }
        });
    }

    viewModel.getTypeImg = function (type) {
        var param = {};
        param.type = type;
        $.post('/RollFile/showImg', param, function (data) {
            var data = strToJson(data.backData);
            if (type == '球队服务') {
                viewModel.teamImgList(data);
            } else if (type == '赛事服务') {
                viewModel.matchImgList(data);
            } else {
                viewModel.memberImgList(data);
            }
        });
    };

    viewModel.load = function () {
        viewModel.getTypeImg('球队服务');
        viewModel.getTypeImg('赛事服务');
        viewModel.getTypeImg('会员平台');
    };

    ko.applyBindings(viewModel, $('#content')[0]);

    viewModel.load();
</script>
