@{
    ViewBag.Title = "会员平台管理";
    Layout = "~/Views/Shared/_Layout_PC.cshtml";
}

<style type="text/css">
    .operate-list {
        display: flex;
        text-align: center;
    }

        .operate-list a {
            flex: 1;
        }
</style>

<!-- 页面头部  -->
<div class="header">
    @{Html.RenderAction("Top", "AdminManage", new { section = "5" });}
</div>

<!-- 页面主题内容  -->
<div class="wrap-content">
    <div class="side-left">
        @{Html.RenderAction("Aside", "Value", new { menu_id = "1_3" });}
    </div>
    <div class="container side-content">
        <div class="row-fluid">
            <div id="content" class="animated fadeInRight">
                <div class="row-fluid">
                    <ul class="breadcrumb">
                        <li><a>会员平台管理</a> <span class="divider">/</span></li>
                        <li class="active">会员平台列表列表</li>
                    </ul>
                </div>
                <div class="row-fluid">
                    <div class="span12">
                        <div class="ibox">
                            <div class="ibox-title">
                                <h5>所有会员平台</h5>
                            </div>
                            <div class="ibox-content">
                                <table class="table table-striped table-bordered table-hover dataTable">
                                    <thead>
                                        <tr>
                                            <th class="span1">序号</th>
                                            <th class="span4">平台名称</th>
                                            <th class="span4">创建时间</th>
                                            <th class="span3"></th>
                                        </tr>
                                    </thead>
                                    <tbody data-bind="foreach: newsList" id="itemContainer">
                                        <tr>
                                            <td data-bind="text: $index() + 1"></td>
                                            <td data-bind="text: mem_title"></td>
                                            <td data-bind="text: create_time"></td>
                                            <td>
                                                <div class="operate-list">
                                                    <a data-bind="click: $parent.edit" href="#" data-toggle="tooltip" data-placement="top" title="修改" class="icon-pencil"></a>
                                                    <a data-bind="click: $parent.del" href="#" data-toggle="tooltip" data-placement="top" title="删除" class="icon-trash"></a>
                                                </div>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                                <div class="holder"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    var viewModel = {
        pageNumber: 1,
        pageSize: 100000,
        newsList: ko.observableArray([]),
        conditionValue: ko.observable('')
    };

    viewModel.edit = function () {
        window.location.href = '/Member/MemberDetailInfo/' + this.id;
    }

    viewModel.del = function () {
        var param = {};
        param.id = this.id;
        $.post('/Member/removeMember', param, function (data) {
            if (data.success) {
                alert('删除成功');
                viewModel.load();
            } else {
                alert(data.backMsg);
            }
        });
    }

    viewModel.load = function () {
        var params = {};
        params.pageNumber = viewModel.pageNumber;
        params.pageSize = viewModel.pageSize;
        params.conditionValue = viewModel.conditionValue();
        $.post('/Member/getMemberList', params, function (data) {
            if (data.success) {
                var newsList = strToJson(data.backData.list);
                viewModel.newsList(newsList);

                $('.operate-list a').tooltip();

                $("div.holder").jPages({
                    containerID: "itemContainer",
                    previous: "←上一页",
                    next: "下一页→",
                    perPage: 10,
                    delay: 100
                });
            }
        });
    };

    ko.applyBindings(viewModel, $('#content')[0]);

    viewModel.load();
</script>
